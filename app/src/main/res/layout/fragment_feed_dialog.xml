<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/agenda_list_header_divider">
        <ImageView
            android:id="@+id/upload_post_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="0dp"
            android:background="@color/agenda_list_header_divider"
            android:src="@drawable/upload_image"
            android:paddingBottom="10dp"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/post_text_field"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/upload_post_image"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@color/agenda_list_header_divider"
            android:elevation="10dp"
            android:hint="Post Text...">

            <EditText
                android:id="@+id/post_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upload_post_image"
                android:layout_marginTop="3dp"
                android:background="@color/cardview_light_background"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="start"
                android:lines="3"
                android:singleLine="false" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/post_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_text_field"
            android:padding="5dp"
            android:background="@color/colorPrimary"
            android:text="Post"
            android:textColor="#FFFFFF" />


    </RelativeLayout>

